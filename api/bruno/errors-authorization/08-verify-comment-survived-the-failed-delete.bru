meta {
  name: Verify comment survived the failed delete
  type: http
  seq: 8
}

get {
  url: {{host}}/api/articles/{{slug}}/comments
  body: none
  auth: none
}

assert {
  res.status: eq 200
}

script:post-response {
  expect(res.body.comments.length).to.be.at.least(1);
  expect(res.body.comments[0].body).to.eql("A's comment");
}
