meta {
  name: Update user
  type: http
  seq: 4
}

put {
  url: {{host}}/api/user
  body: json
  auth: none
}

headers {
  Authorization: Token {{token}}
}

body:json {
  {
    "user": {
      "bio": "Updated bio"
    }
  }
}

assert {
  res.status: eq 200
}

script:post-response {
  expect(res.body.user.bio).to.eql("Updated bio");
  expect(res.body.user.username).to.eql("auth_" + bru.getVar("uid"));
}
