meta {
  name: Post comment empty body
  type: http
  seq: 5
}

post {
  url: {{host}}/api/articles/{{slug}}/comments
  body: json
  auth: none
}

headers {
  Authorization: Token {{token}}
}

body:json {
  {
    "comment": {
      "body": ""
    }
  }
}

assert {
  res.status: eq 422
}

script:post-response {
  expect(res.body.errors.body[0]).to.eql("can't be blank");
}
