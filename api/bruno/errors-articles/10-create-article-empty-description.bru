meta {
  name: Create article empty description
  type: http
  seq: 10
}

post {
  url: {{host}}/api/articles
  body: json
  auth: none
}

headers {
  Authorization: Token {{token}}
}

body:json {
  {
    "article": {
      "title": "Err Desc {{uid}}",
      "description": "",
      "body": "test"
    }
  }
}

assert {
  res.status: eq 422
}

script:post-response {
  expect(res.body.errors.description[0]).to.eql("can't be blank");
}
