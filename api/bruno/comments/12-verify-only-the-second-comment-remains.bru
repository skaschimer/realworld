meta {
  name: Verify only the second comment remains
  type: http
  seq: 12
}

get {
  url: {{host}}/api/articles/{{slug}}/comments
  body: none
  auth: none
}

assert {
  res.status: eq 200
}

script:post-response {
  expect(res.body.comments.length).to.eql(1);
  expect(res.body.comments[0].body).to.eql("Second comment");
}
