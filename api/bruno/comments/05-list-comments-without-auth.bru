meta {
  name: List comments without auth
  type: http
  seq: 5
}

get {
  url: {{host}}/api/articles/{{slug}}/comments
  body: none
  auth: none
}

assert {
  res.status: eq 200
}

script:post-response {
  expect(Array.isArray(res.body.comments)).to.eql(true);
  expect(res.body.comments.length).to.eql(1);
}
