meta {
  name: Setup: Create article
  type: http
  seq: 2
}

post {
  url: {{host}}/api/articles
  body: json
  auth: none
}

headers {
  Authorization: Token {{token}}
}

body:json {
  {
    "article": {
      "title": "Comment Article {{uid}}",
      "description": "For comments",
      "body": "Article body"
    }
  }
}

assert {
  res.status: eq 201
}

script:post-response {
  bru.setVar("slug", res.body.article.slug);
}
