meta {
  name: Register empty email
  type: http
  seq: 2
}

post {
  url: {{host}}/api/users
  body: json
  auth: none
}

body:json {
  {
    "user": {
      "username": "ea_blank_{{uid}}",
      "email": "",
      "password": "password123"
    }
  }
}

assert {
  res.status: eq 422
}

script:post-response {
  expect(res.body.errors.email[0]).to.eql("can't be blank");
}
