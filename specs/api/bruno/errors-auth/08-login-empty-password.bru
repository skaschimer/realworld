meta {
  name: Login empty password
  type: http
  seq: 8
}

post {
  url: {{host}}/api/users/login
  body: json
  auth: none
}

body:json {
  {
    "user": {
      "email": "ea_dup_{{uid}}@test.com",
      "password": ""
    }
  }
}

assert {
  res.status: eq 422
}

script:post-response {
  expect(res.body.errors.password[0]).to.eql("can't be blank");
}
