meta {
  name: User B tries to update -> 403
  type: http
  seq: 5
}

put {
  url: {{host}}/api/articles/{{slug}}
  body: json
  auth: none
}

headers {
  Authorization: Token {{token_b}}
}

body:json {
  {
    "article": {
      "body": "hijacked"
    }
  }
}

assert {
  res.status: eq 403
}

script:post-response {
  expect(res.body.errors.article[0]).to.eql("forbidden");
}
