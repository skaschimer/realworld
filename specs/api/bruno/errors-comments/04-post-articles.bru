meta {
  name: POST articles
  type: http
  seq: 4
}

post {
  url: {{host}}/api/articles
  body: json
  auth: none
}

headers {
  Authorization: Token {{token}}
}

body:json {
  {
    "article": {
      "title": "Err Comment Art {{uid}}",
      "description": "test",
      "body": "test"
    }
  }
}

assert {
  res.status: eq 201
}

script:post-response {
  bru.setVar("slug", res.body.article.slug);
}
